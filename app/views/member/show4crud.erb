</div>
<% end %>
<br class='clear' />
<div class='label'><span>メンバーリスト</span></div>
<% if session[:caller] == 'LP' then %>
<div id='memberlist'>
<% else %>
<div>
<% end %>
<%= render partial: 'layouts/member', collection: @members %>
